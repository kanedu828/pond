{
  "engines": {
    "node": "16.x"
  },
  "name": "pond-service",
  "version": "0.0.1",
  "description": "Backend service for pond",
  "scripts": {
    "start": "node dist/pond-service/src/app.js",
    "dev": "nodemon -r dotenv/config src/app.ts",
    "build": "npm install --only=dev && tsc -p .",
    "test": "jest",
    "lint": "eslint --ext .js,.ts . --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "migrate:latest": "node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:latest",
    "migrate:rollback": "node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:rollback"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-session": "^2.0.44",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "@types/passport": "^1.0.9",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/passport-local": "^1.0.38",
    "@types/socket.io": "^3.0.2",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bun": "^1.0.0",
    "connect-session-knex": "^3.0.1",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "knex": "^2.2.0",
    "passport": "^0.5.3",
    "passport-cookie": "^1.0.9",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "socket.io": "^4.7.2",
    "winston": "^3.8.1"
  }
}
